# EditorConfig helps maintain consistent coding styles

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{json,js,ts,jsx,tsx}]
indent_size = 2

# Handle emoji folders
[👑_CEO-System/**]
charset = utf-8

[🤖_Agents/**]
charset = utf-8

[📁_Documents/**]
charset = utf-8 